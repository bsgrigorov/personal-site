{
  "name": "personal-site",
  "version": "4.0.0",
  "private": true,
  "description": "Borislav Grigorov's personal website and resume",
  "homepage": "https://bgrigorov.com/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bsgrigorov/personal-site.git"
  },
  "engines": {
    "node": "22.x"
  },
  "packageManager": "pnpm@10.26.1",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "pnpm build && npx serve@latest out",
    "lint": "eslint app src",
    "lint:fix": "eslint app src --fix",
    "format": "prettier --write \"app/**/*.{ts,tsx}\" \"src/**/*.{ts,tsx,scss}\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx}\" \"src/**/*.{ts,tsx,scss}\"",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "@next/third-parties": "^16.1.0",
    "dayjs": "^1.11.13",
    "markdown-to-jsx": "^7.7.3",
    "next": "^16.1.0",
    "react": "^19.1.0",
    "react-burger-menu": "^3.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.1",
    "@swc/core": "^1.10.7",
    "@swc/jest": "^0.2.37",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/react": "^19.1.0",
    "@types/react-burger-menu": "^2.8.7",
    "@types/react-dom": "^19.1.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "^16.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss-normalize": "^13.0.1",
    "prettier": "^3.7.4",
    "sass": "^1.83.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.50.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
